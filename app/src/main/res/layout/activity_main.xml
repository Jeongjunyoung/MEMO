<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d9dcdf"
                    android:choiceMode="multipleChoice" />
                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/addBtn"
                    android:layout_width="261dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="16dp"
                    android:src="@drawable/floating_add_icon"
                    fab:fab_colorNormal="@color/fabPrimary"
                    fab:fab_colorPressed="@color/fabPressed"
                    fab:fab_colorRipple="@color/fabRipple" />
        </FrameLayout>

    <LinearLayout
        android:id="@+id/memo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/memo_editText"
                android:layout_width="350dp"
                android:layout_height="381dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_rounded"
                android:scrollbars="vertical"
                android:visibility="gone"
                android:gravity="top"/>
            <TextView
                android:id="@+id/memo_textView"
                android:layout_width="350dp"
                android:layout_height="381dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_rounded"
                android:scrollbars="vertical"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/write_save_btn"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SAVE"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/write_update_btn"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Modify" />

                <Button
                    android:id="@+id/write_cancel_btn"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BACK" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
