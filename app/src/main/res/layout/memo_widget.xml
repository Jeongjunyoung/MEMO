<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/widget_layout_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MEMO"
            android:layout_marginLeft="20dp"
            android:layout_weight="70"
            android:gravity="center|left"
            android:textSize="22dp"
            android:textColor="#ffffff"/>
        <ImageButton
            android:id="@+id/widget_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/widget_add_icon"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/widget_item_refresh"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/widget_refresh_icon"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:background="#d9dcdf"
        android:layout_marginTop="42dp">
    </ListView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>