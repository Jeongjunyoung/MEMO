<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <Preference
        android:defaultValue="0"
        android:title="테마색 변경"
        android:key="key_setTheme"
        android:icon="@drawable/theme_icon"/>
    <ListPreference
        android:defaultValue="0"
        android:title="MEMO 정렬"
        android:entries="@array/sortArray"
        android:entryValues="@array/sortArray_values"
        android:key="set_memo_sort"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:icon="@drawable/sort_icon"/>
    <PreferenceCategory
        android:layout="@layout/preference_cate">
        <Preference
            android:title="Developer"
            android:summary="OBG"
            android:icon="@drawable/developer_icon"/>
        <Preference
            android:title="Version"
            android:summary="1.01"
            android:icon="@drawable/version_icon"/>
    </PreferenceCategory>
</PreferenceScreen>